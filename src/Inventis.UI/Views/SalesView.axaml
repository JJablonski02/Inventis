<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Inventis.UI.Views.SalesView"
             xmlns:vm="using:Inventis.UI.ViewModels"
             x:DataType="vm:SalesViewModel">
        <DataGrid ItemsSource="{Binding DailyInventoryScans}" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Nazwa" Binding="{Binding ProductName}" Width="*"/>
            <DataGridTextColumn Header="Cena brutto" Binding="{Binding GrossSalePrice, StringFormat='{}{0:C}'}" Width="150"/>
            <DataGridTextColumn Header="Utworzono" Binding="{Binding ScanTime}" Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
